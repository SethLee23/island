.bookDetailContainer {
  background: #f5f5f5;
  width: 100%;
}

.head {
  background-color: #fff;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}

.author {
  font-size: 28rpx;
  color: #999;
}

.head image {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.subContainer {
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 30rpx;
}

.headline {
  font-size: 30rpx;
  font-weight: 600;
  color-interpolation-filters: #2f2f2f;
  margin-bottom: 20rpx;
}

.commentContainer {
  display: flex;
  flex-wrap: wrap;
}

.commentContainer v-tag {
  margin-right: 15rpx;
  margin-bottom: 12rpx;
}

.num {
  margin-left: 5rpx;
  font-size: 22rpx;
  color: #aaa;
}

.commentContainer>v-tag:nth-child(1)>view {
  background-color: #fffddd;
}

.commentContainer>v-tag:nth-child(2)>view {
  background-color: #eefbff;
}

.content {
  text-indent: 58rpx;
  font-weight: 500;
}

.detailContainer {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  margin-bottom: 100rpx;
  font-size: 28rpx;
  color: #666;
}

.vertical {
  display: flex;
  flex-direction: column;
}

.description {
  color: #999;
  margin-right: 30rpx;
}

.postContainer {
  height: 100rpx;
  box-shadow: 1px -1px 1px #e3e3e3;
  position: fixed;
  width: 690rpx;
  background-color: #fff;
  bottom: 0;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  justify-content: space-between;
}

.postFake {
  display: flex;
  align-items: center;
  height: 60rpx;
  width: 460rpx;
  border: 1px solid #999;
  border-radius: 15px;
  font-size: 22rpx;
  padding-left: 20rpx;
}

.postingContainer {
  bottom: 0;
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  width: 100%;
  z-index: 999;
}

.postHeader {
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.cancel {
  color: #666;
}

.postHeader text {
  padding: 28rpx;
}

.postHeader>text:first-child {
  font-size: 28rpx;
  color: #bbb;
}

.postingContainer .commentContainer {
  width: 690rpx;
  padding: 40rpx 30rpx 0 30rpx;
}
.post {
  width: 690rpx;
  margin: 30rpx auto;
  height: 56rpx;
  background: #f5f5f5;
  border-radius: 15px;
  padding-left: 25rpx;
}
.shadow {
  color: #999;
}
.shareButton{
  margin-top:20rpx;
}

.share{
  width:40rpx;
  height:40rpx;
}
.likeContainer{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-right:30rpx;
}