.box {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50px;
  background: #f5f5f5;
  height: 68rpx;
  width: 700rpx;
  color: #999;
}

.header {
  position: fixed;
  background-color: #fff;
  height: 100rpx;
  width: 100%;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  align-self: center;
  justify-content: center;
  box-shadow: 0 0 3px 0 #e3e3e3;
  z-index: 99;
}

.searchImg {
  width: 14px;
  height: 14px;
  margin-right: 10px;
  margin-bottom: -2px;
}

.headImg {
  width: 106rpx;
  height: 34rpx;
  margin-top: 40rpx;
}

.bookContainer, .subContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bookContainer {
  width: 100%;
}

.subContainer {
  background-color: #f5f5f5;
  margin-top: 100rpx;
  width: 100%;
}

.bookStore {
  display: inline-flex;
  margin-top: 10rpx;
  flex-direction: row;
  width: 100%;
  box-sizing: border-box;
  flex-wrap: wrap;
  padding: 0 90rpx 0 90rpx;
  justify-content: space-between;
}

.bookStore > .books {
  box-sizing: border-box;
  width: 50%;
  display: flex;
  justify-content: center;
  margin-bottom: 12rpx;
}
